rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Pets subcollection - users can only access their own pets
      match /pets/{petId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
